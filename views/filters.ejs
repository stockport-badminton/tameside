<div class="filters-container">
  <form action="" id="statsFilter">
    <div class="filters-grid">
      
      <% if (typeof hideFilters !== "undefined" && hideFilters.indexOf("division") == -1){ %>
        <div class="filter-item">
          <label for="divisionSelect">
            <i class="fas fa-trophy"></i> Division
          </label>
          <select class="form-control" name="divisionSelect" id="divisionSelect">
            <option value="0">All Divisions</option>
            <option value="Division-1">Division 1</option>
            <option value="Division-2">Division 2</option>
          </select>
        </div>
      <% } %>
      
      <% if (typeof hideFilters !== "undefined" && hideFilters.indexOf("season") == -1){ %>
        <div class="filter-item">
          <label for="seasonSelect">
            <i class="fas fa-calendar-check"></i> Season
          </label>
          <select class="form-control" name="seasonSelect" id="seasonSelect">
            <option value="0">Current Season</option>
            <option value="20232024">2023-2024</option>
            <option value="20242025">2024-2025</option>
          </select>
        </div>
      <% } %>
      
      <% if (typeof hideFilters !== "undefined" && hideFilters.indexOf("status") == -1){ %>
        <div class="filter-item">
          <label for="statusSelect">
            <i class="fas fa-circle-check"></i> Status
          </label>
          <select class="form-control" name="statusSelect" id="statusSelect">
            <option value="0">All Statuses</option>
            <option value="outstanding">Outstanding</option>
            <option value="rearranging">Rearranging</option>
            <option value="rearranged">Rearranged</option>
            <option value="conceded">Conceded</option>
            <option value="complete">Completed</option>
          </select>
        </div>
      <% } %>
      
      <% if (typeof hideFilters !== "undefined" && hideFilters.indexOf("gender") == -1){ %>
        <div class="filter-item">
          <label for="gender">
            <i class="fas fa-venus-mars"></i> Gender
          </label>
          <select class="form-control" name="gender" id="gender">
            <option value="0">All</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
          </select>
        </div>
      <% } %>
      
      <% if (typeof hideFilters !== "undefined" && hideFilters.indexOf("gametype") == -1){ %>
        <div class="filter-item">
          <label for="gameType">
            <i class="fas fa-shuttle-badminton"></i> Game Type
          </label>
          <select class="form-control" name="gameType" id="gameType">
            <option value="0">All Types</option>
            <option value="Mens">Mens</option>
            <option value="Ladies">Ladies</option>
            <option value="Mixed">Mixed</option>
          </select>
        </div>
      <% } %>
      
      <% if (typeof clubs !== "undefined"){ %>
        <div class="filter-item">
          <label for="club">
            <i class="fas fa-building"></i> Club
          </label>
          <select class="form-control" name="club" id="club">
            <option value="0">All Clubs</option>
            <% for (row of clubs){ %>
              <option value="<%= row %>"><%= row %></option>
            <% } %>
          </select>
        </div>
      <% } %>
      
      <% if (typeof teams !== "undefined"){ %>
        <div class="filter-item">
          <label for="team">
            <i class="fas fa-users"></i> Team
          </label>
          <select class="form-control" name="team" id="team">
            <option value="0">All Teams</option>
            <% for (row of teams){ %>
              <option value="<%= row %>"><%= row %></option>
            <% } %>
          </select>
        </div>
      <% } %>
      
      <div class="filter-item filter-button">
        <button class="btn-modern-primary" id="statsUpdate" type="button">
          <i class="fas fa-filter"></i> Apply Filters
        </button>
      </div>
    </div>
  </form>
  
  <% if(typeof title !== "undefined" && title.indexOf("Player Stats") > -1) { %>
    <div class="column-toggle-section">
      <label for="columnToggle">
        <i class="fas fa-eye"></i> Show/Hide Columns
      </label>
      <select multiple name="columnToggle" id="columnToggle" class="form-control">
        <option value="0">Name</option>
        <option value="1">Gender</option>
        <option value="2">Team</option>
        <option value="3">Club</option>
        <option value="4">Aces For</option>
        <option value="5">Aces Against</option>
        <option value="6">P + W - L</option>
        <option value="7">Games Played</option>
        <option value="8">Games Won</option>
        <option value="9">Games Won / Match</option>
        <option value="10">Pts For / Game</option>
        <option value="11">Pts Against / Game</option>
        <option value="12">Rating</option>
      </select>
    </div>
  <% } %>
</div>